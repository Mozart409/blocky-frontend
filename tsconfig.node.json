{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/img/*": [
        "public/images/*"
      ],
      "@/ui/*": [
        "components/ui/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ]
    }
  },
  "include": [
    "vite.config.ts"
  ]
}